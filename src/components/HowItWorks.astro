---
// Componente: HowItWorks (Pasos del servicio)
interface Step { title: string; desc: string; icon: string }
const steps: Step[] = [
  { title: 'Contacto', desc: 'Nos escribes por WhatsApp o formulario con los datos básicos.', icon: '💬' },
  { title: 'Evaluación', desc: 'Revisamos volumen, origen, destino y tiempos para cotizar.', icon: '📐' },
  { title: 'Coordinación', desc: 'Definimos fecha, horario y recursos necesarios del equipo.', icon: '🧭' },
  { title: 'Traslado y entrega', desc: 'Ejecutamos el servicio y confirmamos la recepción.', icon: '🚚' },
];
---
<section class="how" aria-labelledby="how-title">
  <div class="container">
    <h2 id="how-title" class="section-title" data-animate="fade-up">¿Cómo trabajamos?</h2>
    <ol class="how-steps">
      {steps.map((s,i) => (
        <li class="how-step" data-animate="fade-right" data-stagger-group="steps" data-delay={String(i*60)}>
          <div class="how-step__num" aria-hidden="true">{i+1}</div>
          <div class="how-step__ico" aria-hidden="true">{s.icon}</div>
          <div class="how-step__body">
            <h3 class="how-step__title">{s.title}</h3>
            <p class="how-step__desc">{s.desc}</p>
          </div>
        </li>
      ))}
    </ol>
  </div>
</section>
<style>
  .how { padding:3.5rem 0 3rem; background:linear-gradient(140deg,#f5f6f8,#eef1f5); }
  .how-steps { list-style:none; margin:0; padding:0; display:grid; gap:1.4rem; grid-template-columns:repeat(auto-fit,minmax(240px,1fr)); counter-reset: how; }
  .how-step { position:relative; background:#fff; padding:1.2rem 1rem 1.3rem 1rem; border:1px solid rgba(0,0,0,.07); border-radius:14px; box-shadow:0 2px 8px rgba(0,0,0,.06); display:flex; flex-direction:column; gap:.6rem; min-height:200px; }
  .how-step__num { position:absolute; top:10px; right:12px; font-size:.75rem; font-weight:700; letter-spacing:.5px; background:#1c2130; color:#fff; padding:.35rem .55rem; border-radius:999px; box-shadow:0 2px 6px rgba(0,0,0,.2); }
  .how-step__ico { font-size:2rem; filter:drop-shadow(0 2px 4px rgba(0,0,0,.2)); }
  .how-step__title { margin:.1rem 0 .2rem; font-size:1rem; font-weight:700; letter-spacing:.3px; color:#1c2130; }
  .how-step__desc { margin:0; font-size:.82rem; line-height:1.4; color:#444; }
  @media (max-width:680px){ .how { padding:3rem 0 2.4rem; } .how-steps { grid-template-columns:repeat(auto-fit,minmax(180px,1fr)); } }
</style>
